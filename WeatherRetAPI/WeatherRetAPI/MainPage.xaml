<Page
    x:Class="WeatherRestAPI.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WeatherRestAPI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel>
            <TextBlock FontSize="50" Text="Weather Application"> </TextBlock>
            <TextBlock FontSize="30" Text="Weather in London"></TextBlock>
            <TextBlock Name="Temperature" FontSize="40"></TextBlock>
            <TextBlock Name="Visibility" FontSize="25"></TextBlock>
            <TextBlock Name="Description" FontSize="25"></TextBlock>
        </StackPanel>

    </Grid>
</Page>
